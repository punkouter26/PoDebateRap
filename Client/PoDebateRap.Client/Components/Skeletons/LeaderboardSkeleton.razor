@* Leaderboard Skeleton - Shows while loading leaderboard data *@

<div class="skeleton-leaderboard">
    <!-- Header Skeleton -->
    <div class="skeleton-header">
        <RadzenSkeleton Style="height: 32px; width: 200px;" class="skeleton-pulse" />
        <RadzenSkeleton Style="height: 18px; width: 180px; margin-top: 0.5rem;" class="skeleton-pulse" />
    </div>

    <!-- Actions Skeleton -->
    <div class="skeleton-actions">
        <RadzenSkeleton Style="height: 40px; width: 150px; border-radius: 8px;" class="skeleton-pulse" />
        <RadzenSkeleton Style="height: 40px; width: 100px; border-radius: 8px;" class="skeleton-pulse" />
    </div>

    <!-- Stats Cards Skeleton -->
    <div class="skeleton-stats">
        @for (int i = 0; i < 3; i++)
        {
            <div class="skeleton-stat-card">
                <RadzenSkeleton Style="height: 40px; width: 40px; border-radius: 50%;" class="skeleton-pulse" />
                <div class="skeleton-stat-info">
                    <RadzenSkeleton Style="height: 24px; width: 80px;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 14px; width: 100px; margin-top: 0.25rem;" class="skeleton-pulse" />
                </div>
            </div>
        }
    </div>

    <!-- DataGrid Skeleton -->
    <div class="skeleton-grid">
        <!-- Header Row -->
        <div class="skeleton-grid-header">
            <RadzenSkeleton Style="height: 20px; width: 50px;" class="skeleton-pulse" />
            <RadzenSkeleton Style="height: 20px; width: 100px;" class="skeleton-pulse" />
            <RadzenSkeleton Style="height: 20px; width: 50px;" class="skeleton-pulse" />
            <RadzenSkeleton Style="height: 20px; width: 50px;" class="skeleton-pulse" />
            <RadzenSkeleton Style="height: 20px; width: 60px;" class="skeleton-pulse" />
            <RadzenSkeleton Style="height: 20px; width: 80px;" class="skeleton-pulse" />
        </div>

        <!-- Data Rows -->
        @for (int i = 0; i < 5; i++)
        {
            <div class="skeleton-grid-row">
                <RadzenSkeleton Style="height: 28px; width: 40px; border-radius: 14px;" class="skeleton-pulse" />
                <div class="skeleton-rapper-cell">
                    <RadzenSkeleton Style="height: 32px; width: 32px; border-radius: 50%;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 18px; width: 80px;" class="skeleton-pulse" />
                </div>
                <RadzenSkeleton Style="height: 24px; width: 36px; border-radius: 12px;" class="skeleton-pulse" />
                <RadzenSkeleton Style="height: 24px; width: 36px; border-radius: 12px;" class="skeleton-pulse" />
                <RadzenSkeleton Style="height: 18px; width: 40px;" class="skeleton-pulse" />
                <div class="skeleton-winrate-cell">
                    <RadzenSkeleton Style="height: 8px; width: 60px; border-radius: 4px;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 16px; width: 40px;" class="skeleton-pulse" />
                </div>
            </div>
        }
    </div>
</div>

<style>
    .skeleton-leaderboard {
        padding: 2rem;
        max-width: 1000px;
        margin: 1.5rem auto;
        background: linear-gradient(145deg, var(--rz-base-800, #1e1e1e) 0%, var(--rz-base-900, #111) 100%);
        border-radius: 16px;
        border: 1px solid var(--rz-base-600, #333);
    }

    .skeleton-header {
        text-align: center;
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .skeleton-actions {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .skeleton-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .skeleton-stat-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: var(--rz-base-700, #2a2a2a);
        border-radius: 10px;
    }

    .skeleton-stat-info {
        display: flex;
        flex-direction: column;
    }

    .skeleton-grid {
        background: var(--rz-base-800, #1e1e1e);
        border-radius: 10px;
        border: 1px solid var(--rz-base-600, #444);
        overflow: hidden;
    }

    .skeleton-grid-header {
        display: grid;
        grid-template-columns: 60px 1fr 70px 70px 80px 100px;
        gap: 1rem;
        padding: 1rem;
        background: var(--rz-base-700, #2a2a2a);
        border-bottom: 2px solid rgba(255, 215, 0, 0.3);
    }

    .skeleton-grid-row {
        display: grid;
        grid-template-columns: 60px 1fr 70px 70px 80px 100px;
        gap: 1rem;
        padding: 1rem;
        align-items: center;
        border-bottom: 1px solid var(--rz-base-700, #333);
    }

    .skeleton-grid-row:last-child {
        border-bottom: none;
    }

    .skeleton-rapper-cell {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .skeleton-winrate-cell {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .skeleton-pulse {
        animation: skeleton-pulse 1.5s ease-in-out infinite;
    }

    @@keyframes skeleton-pulse {
        0%, 100% { opacity: 0.4; }
        50% { opacity: 0.8; }
    }

    @@media (max-width: 768px) {
        .skeleton-stats {
            grid-template-columns: 1fr;
        }

        .skeleton-grid-header,
        .skeleton-grid-row {
            grid-template-columns: 50px 1fr 50px 80px;
        }

        .skeleton-grid-header > :nth-child(4),
        .skeleton-grid-header > :nth-child(5),
        .skeleton-grid-row > :nth-child(4),
        .skeleton-grid-row > :nth-child(5) {
            display: none;
        }
    }
</style>
