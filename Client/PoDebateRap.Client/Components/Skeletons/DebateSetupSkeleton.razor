@* Debate Setup Skeleton - Shows while loading rappers and initial data *@

<div class="skeleton-setup">
    <!-- Quick Battle Skeleton -->
    <div class="skeleton-quick-battle">
        <RadzenSkeleton Style="height: 56px; width: 250px; border-radius: 12px;" class="skeleton-pulse" />
        <RadzenSkeleton Style="height: 16px; width: 180px; margin-top: 0.75rem;" class="skeleton-pulse" />
    </div>

    <!-- Divider Skeleton -->
    <div class="skeleton-divider">
        <RadzenSkeleton Style="height: 1px; width: 100%;" class="skeleton-line" />
    </div>

    <!-- Rapper Selection Skeleton -->
    <div class="skeleton-rapper-section">
        <RadzenSkeleton Style="height: 24px; width: 120px; margin-bottom: 1rem;" class="skeleton-pulse" />
        <div class="skeleton-rapper-grid">
            @for (int i = 0; i < 6; i++)
            {
                <div class="skeleton-rapper-card">
                    <RadzenSkeleton Style="height: 50px; width: 50px; border-radius: 50%;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 20px; width: 80px; margin-top: 0.5rem;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 14px; width: 60px; margin-top: 0.25rem;" class="skeleton-pulse" />
                </div>
            }
        </div>
    </div>

    <!-- VS Separator Skeleton -->
    <div class="skeleton-vs">
        <RadzenSkeleton Style="height: 40px; width: 60px; border-radius: 20px;" class="skeleton-pulse" />
    </div>

    <!-- Rapper Selection 2 Skeleton -->
    <div class="skeleton-rapper-section">
        <RadzenSkeleton Style="height: 24px; width: 120px; margin-bottom: 1rem;" class="skeleton-pulse" />
        <div class="skeleton-rapper-grid">
            @for (int i = 0; i < 6; i++)
            {
                <div class="skeleton-rapper-card">
                    <RadzenSkeleton Style="height: 50px; width: 50px; border-radius: 50%;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 20px; width: 80px; margin-top: 0.5rem;" class="skeleton-pulse" />
                    <RadzenSkeleton Style="height: 14px; width: 60px; margin-top: 0.25rem;" class="skeleton-pulse" />
                </div>
            }
        </div>
    </div>

    <!-- Topic Input Skeleton -->
    <div class="skeleton-topic">
        <RadzenSkeleton Style="height: 56px; width: 100%; border-radius: 8px;" class="skeleton-pulse" />
    </div>

    <!-- Button Skeleton -->
    <div class="skeleton-button">
        <RadzenSkeleton Style="height: 48px; width: 200px; border-radius: 10px;" class="skeleton-pulse" />
    </div>
</div>

<style>
    .skeleton-setup {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 2rem;
        background: linear-gradient(145deg, var(--rz-base-800, rgba(30, 30, 30, 0.95)) 0%, var(--rz-base-900, rgba(15, 15, 15, 0.98)) 100%);
        border: 2px solid rgba(255, 215, 0, 0.1);
        border-radius: 16px;
    }

    .skeleton-quick-battle {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .skeleton-divider {
        padding: 0.5rem 0;
    }

    .skeleton-rapper-section {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .skeleton-rapper-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 1rem;
        width: 100%;
    }

    .skeleton-rapper-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background: var(--rz-base-700, #2a2a2a);
        border-radius: 10px;
    }

    .skeleton-vs {
        display: flex;
        justify-content: center;
        padding: 0.5rem 0;
    }

    .skeleton-topic {
        padding: 0 1rem;
    }

    .skeleton-button {
        display: flex;
        justify-content: center;
    }

    .skeleton-pulse {
        animation: skeleton-pulse 1.5s ease-in-out infinite;
    }

    .skeleton-line {
        background: linear-gradient(90deg, transparent, rgba(255, 215, 0, 0.1), transparent);
    }

    @@keyframes skeleton-pulse {
        0%, 100% { opacity: 0.4; }
        50% { opacity: 0.8; }
    }
</style>
