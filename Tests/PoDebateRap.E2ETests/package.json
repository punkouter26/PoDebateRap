{
  "name": "podebaterap-e2e-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for PoDebateRap application",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:desktop": "playwright test --grep @desktop",
    "test:mobile": "playwright test --grep @mobile",
    "test:report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:5000"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "blazor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}
